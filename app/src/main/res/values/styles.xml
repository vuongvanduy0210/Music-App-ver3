<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTextInputLayoutForLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/text_color</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="startIconTint">@color/text_color</item>
    </style>

    <style name="BaseEditTextForLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input_shape_corner</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:padding">@dimen/edit_text_padding</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHighlight">@color/text_color</item>
        <item name="android:textColorLink">@color/text_color</item>
    </style>

    <style name="BaseTextInputLayoutForSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="endIconMode">clear_text</item>
        <item name="endIconTint">@color/text_color</item>
        <item name="hintTextColor">@color/text_color</item>
        <item name="startIconTint">@color/text_color</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="BaseEditTextForSearch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_input_shape_corner</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHighlight">@color/text_color</item>
        <item name="android:textColorLink">@color/text_color</item>
    </style>

    <style name="BaseButtonLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bt_login_height</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>