<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.vuongvanduy.music_app.ui.common.viewmodel.SongViewModel" />
        <import type="android.view.View"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.online_songs.OnlineSongsFragment"
        android:orientation="vertical"
        android:background="@color/bg_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/bg_color">

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_search"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="17dp" />

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/hint_search"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:layout_toEndOf="@+id/img_search"
                android:textColorHint="@color/text_color"
                android:backgroundTint="@color/text_color"
                android:textColor="@color/text_color"
                android:enabled="@{viewModel.isLoadingOnline() ? false : true}"/>

            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_clear"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_list_songs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:visibility="@{viewModel.isLoadingOnline() ? View.GONE : View.VISIBLE}"/>

        <TextView
            android:id="@+id/tv_noti_list_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/empty_online_songs"
            android:textSize="17sp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:layout_margin="7dp"
            android:visibility="@{viewModel.isLoadingOnline() ? View.VISIBLE : View.GONE}"/>


    </LinearLayout>
</layout>