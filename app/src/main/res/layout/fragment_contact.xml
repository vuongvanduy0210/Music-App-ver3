<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.contact.ContactFragment"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_avatar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dev_name"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/text_color"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_facebook"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/custom_layout"
            android:layout_margin="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_fb"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:text="@string/facebook"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_zalo"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/custom_layout"
            android:layout_margin="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_zalo"
                android:layout_marginTop="7dp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:text="@string/zalo"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/item_gmail"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/custom_layout"
            android:layout_margin="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_gmail"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:text="@string/gmail"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_microsoft"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/custom_layout"
            android:layout_margin="15dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_microsoft"
                android:layout_marginTop="7dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:text="@string/microsoft"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>