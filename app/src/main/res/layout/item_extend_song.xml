<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="song"
            type="com.vuongvanduy.music_app.data.models.Song" />

        <variable
            name="listener"
            type="com.vuongvanduy.music_app.ui.common.myinterface.IClickSongListener" />
    </data>

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:id="@+id/layout_item_online_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        app:mode="same_level">

        <RelativeLayout
            android:id="@+id/layout_add_favourites"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/extend_bg_color">

            <TextView
                android:id="@+id/tv_action"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </RelativeLayout>

        <!-- Your main layout here -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:onClick="@{() -> listener.onClickSong(song)}"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_music_in_list"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/img_music_in_list"
                android:background="@color/bg_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_music_name_in_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{song.name}"
                    android:textColor="@color/text_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_singer_in_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{song.singer}"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"
                    android:textStyle="italic" />

            </LinearLayout>

        </RelativeLayout>

    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</layout>