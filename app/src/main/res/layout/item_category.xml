<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="category"
            type="com.vuongvanduy.music_app.data.models.Category" />

        <variable
            name="listener"
            type="com.vuongvanduy.music_app.ui.home.IClickCategoryListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_name_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:onClick="@{() -> listener.clickButtonViewAll(category.name)}"
            android:text="@{category.name}"
            android:textColor="@color/text_color"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bt_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="10dp"
            android:onClick="@{() -> listener.clickButtonViewAll(category.name)}"
            android:text="@string/view_all"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            android:textStyle="italic" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_view_all"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp" />

    </RelativeLayout>
</layout>